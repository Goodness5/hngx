{
    "manifest_version": 2,
    "name": "Screen Recorder and Screenshot",
    "version": "1.0",
    "description": "Record your screen and take screenshots.",
    "icons": {
      "16": "logo.svg",
      "48": "logo.svg",
      "128": "logo.svg"
    },
    "browser_action": {
      "default_popup": "index.html",
      "default_icon": {
        "16": "logo.svg",
        "48": "logo.svg",
        "128": "logo.svg"
      }
    },
    "permissions": [
      "activeTab",
      "desktopCapture",
      "storage"
    ]
  }
  